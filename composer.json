{
    "name": "upzelo/recharge-payments",
    "description": "Recharge Payments Library",
    "keywords": ["php", "recharge", "recharge-payments", "rechargepayments"],
    "license": "MIT",
    "authors": [
        {
            "name": "James Wallen-Jones",
            "email": "j.wallen.jones@googlemail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "pestphp/pest": "^1.20.0",
        "friendsofphp/php-cs-fixer": "^3.2.1",
        "phpstan/phpstan": "^1.1.1",
        "symfony/var-dumper": "^5.3.10"
    },
    "autoload": {
        "psr-4": {
            "Recharge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
